  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deltatree/showcase/issues"
  },
  "homepage": "https://github.com/deltatree/showcase#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "typescript": "^5.9.3"
  }
}
